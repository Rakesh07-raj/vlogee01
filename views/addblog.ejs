<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partial/head") %>
    <title>Vlogee - Add Blog</title>
  </head>

  <body>
    <%- include("./partial/nav") %>

    <div class="container mt-4">
      <form
        action="<%= locals.blog ? '/blog/edit-blog/' + locals.blog._id : '/blog/add-blog' %>"
        method="post"
        enctype="multipart/form-data"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="mb-2">
          <label for="formFile" class="form-label">Choose Image :</label>
          <input class="form-control mb-2" type="file" name="coverImg"
          id="formFile" accept="image/*" <%= locals.blog ? "" : "required" %> />
          <% if (locals.blog?.coverImg ) { %>
          <input
            type="hidden"
            name="oldCoverImg"
            value="<%= locals.blog.coverImg %>"
          />
          <img
            src="<%= locals.blog.coverImg %>"
            alt="<%= locals.blog.coverImg %>"
            height="100"
          />
          <% } %>
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            class="form-control"
            id="title"
            placeholder="Enter Title Here..."
            value="<%= locals.blog?.title %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Content :</label>
          <textarea
            class="form-control"
            name="content"
            id="content"
            rows="6"
            required
          >
<%= locals.blog?.content %></textarea
          >
        </div>
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">
            <% if (locals.blog) { %>
            <i class="bi bi-pen h8"></i> Edit Blog <% } else { %><i
              class="bi bi-file-earmark-plus h8"
            ></i>
            Create Blog <% } %>
          </button>
        </div>
      </form>
    </div>

    <%- include("./partial/script") %>
  </body>
</html>
