    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
  }

  /* Responsive adjustments */
  @media (max-width: 992px) {
    .hamburger {
      display: block;
    }

    .navbar-nav {
      gap: 0.5rem;
      padding: 1rem 0;
    }

    .nav-link {
      padding: 0.5rem 1rem !important;
    }

    .btn-outline-light {
      margin-left: 1rem !important;
      margin-top: 0.5rem;
    }
  }
