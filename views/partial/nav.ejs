    letter-spacing: 0.5px;
    transition: all 0.3s ease;
  }

  .navbar-brand:hover {
    transform: translateY(-2px);
  }

  /* Nav links styling */
  .nav-link {
    position: relative;
    transition: all 0.3s ease;
  }

  .nav-underline {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: #4361ee;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }

  .nav-link:hover .nav-underline {
    width: 70%;
  }

  .nav-link:hover {
    transform: translateY(-2px);
  }

  /* Avatar styling */
  .avatar-sm {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, #4361ee, #3a0ca3);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
  }

  .avatar-sm img {
    height: 100%;
    width: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

